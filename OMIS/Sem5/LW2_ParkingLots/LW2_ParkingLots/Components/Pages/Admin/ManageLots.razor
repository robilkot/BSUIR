@page "/manageLots"
@using System.Globalization
@using LW2_ParkingLots.Model.Entities
@using LW2_ParkingLots.Model.Services

<div class="layout-rectangle1">
    <div class="layout-rectangle1" style="float: left; width: 93%; padding: 0;">
        <div style="display: flex; align-items: center; margin-bottom: 5rem;">
            <img src="settings.png" alt="icon" style="margin-right: 3rem;">
            <h2 style="margin: 0;">Управление парковочными местами</h2>
        </div>

        <div style="display:flex; justify-content: center; margin-bottom: 20rem; margin-top: 20rem">
            <div style="margin: auto; display:grid; grid-template-columns: 8rem 20rem; grid-row-gap: 0.5rem;">
                <label style="margin: auto;">Адрес зоны:</label> <input style="background-color: #d9d9d9; height: 3rem; border:none" placeholder="введите адрес" />
                <label style="margin: auto;">Номер места:</label> <input style="background-color: #d9d9d9; height: 3rem; border:none" placeholder="введите номер" />
            </div>
        </div>

        <button style="margin:0 auto; display:block; width: 20rem; background-color: #5a3db4; color: white; padding: 10px 20px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;">
            Найти
        </button>

        <div style="text-align: center; margin-top: 20px;">
            <a style="padding: 10px 20px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;" href="/manageZones">Назад</a>
        </div>

    </div>
    <div class="layout-rectangle1" style="float: left; width: 7%; padding: 0;">

        <NavLink class="nav-link" href="createLot" style="padding: 0; text-align: center">
            <img src="settings.png" width="30" height="30" style="margin: 8em auto 0em auto;  display: block" />
            <label>Создать</label>
        </NavLink>
    </div>
</div>


@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}
