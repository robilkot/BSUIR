@page "/management"
@using System.Globalization
@using LW2_ParkingLots.Model.Entities
@using LW2_ParkingLots.Model.Services

<div class="layout-rectangle1">
    <div style="display: flex; align-items: center; margin-bottom: 5rem;">
        <img src="settings.png" alt="icon" style="margin-right: 3rem;">
        <h2 style="margin: 0;">Управление</h2>
    </div>

    <div style="display: flex; align-content:center;">

        <div style="background-color: #fff7f7;margin: auto; padding:10rem; border:solid; border-color: black; border-width: 0.1rem; border-radius: 20px; width: 45%;">

            <NavLink class="nav-link" href="manageZones" style="padding: 0; text-align: center;">
                <button style="box-shadow: 0 2px 5px 2px rgba(0, 0, 0, 0.25); color:#65558f;  margin-top: 1rem; display:block; width: 100%; background-color: #ece6f0; padding: 10px 20px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;">
                    Управление парковочными зонами
                </button>
                </NavLink>

            <NavLink class="nav-link" href="adminSelectLot" style="padding: 0; text-align: center;">
                <button style="box-shadow: 0 2px 5px 2px rgba(0, 0, 0, 0.25); color:#65558f; margin-top: 1rem; display:block; width: 100%; background-color: #ece6f0;  padding: 10px 20px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;">
                    Управление парковочными местами
                </button>
            </NavLink>

            <NavLink class="nav-link" href="manageUsers" style="padding: 0; text-align: center;">
                <button style="box-shadow: 0 2px 5px 2px rgba(0, 0, 0, 0.25); color:#65558f; margin-top: 1rem; display:block; width: 100%; background-color: #ece6f0;  padding: 10px 20px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;">
                    Управление пользователями
                </button>
            </NavLink>
        </div>

    </div>
</div>


@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    [Inject]
    private IPaymentService service { get; set; } = default!;

    private async Task ProcessPayment()
    {
        await service.ProcessPayment(0, 17.50m, 1);
    }
}
