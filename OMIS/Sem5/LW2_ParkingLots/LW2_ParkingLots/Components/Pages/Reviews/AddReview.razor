@page "/addReview"
@rendermode InteractiveServer

@using System.Globalization
@using LW2_ParkingLots.Model.Entities
@using LW2_ParkingLots.Model.Services

<div class="layout-rectangle1">
    <div style="display: flex; align-items: center; margin-bottom: 5rem;">
        <img src="https://via.placeholder.com/50" alt="icon" style="margin-right: 3rem;">
        <h2 style="margin: 0;">Новый отзыв</h2>
    </div>

    <div style="margin-left: 10rem; margin-bottom: 20rem">
        <label style="margin-left: 1rem; margin-bottom: 1rem" for="test">Отзыв:</label>

        <textarea style="background-color: #999999; border-radius: 16px; display: block" id="w3review" name="test" rows="10" cols="150">
        Введите отзыв
        </textarea>
    </div>

    <button @onclick='() => Navigation.NavigateTo("reviews")' style="margin:0 auto; display:block; width: 20rem; background-color: #5a3db4; color: white; padding: 10px 20px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;">
        Добавить отзыв
        </button>

    <div style="text-align: center; margin-top: 20px;">
        <a style="padding: 10px 20px; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;" href="/reviews">Просмотр отзывов</a>
    </div>
</div>


@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}
