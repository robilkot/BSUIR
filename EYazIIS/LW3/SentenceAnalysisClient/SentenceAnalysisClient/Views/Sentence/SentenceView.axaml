<ContentControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
	xmlns:vm="using:SentenceAnalysisClient.ViewModels"
	xmlns:view="using:SentenceAnalysisClient.Views.Sentence"
	xmlns:model="using:SentenceAnalysisClient.Model"
	x:Class="SentenceAnalysisClient.Views.Sentence.SentenceView"
	x:Name="sentence">

	<Design.DataContext>
		<vm:SentenceViewModel/>
	</Design.DataContext>

	<Border
		Padding="10"
		BorderBrush="LightGray"
		BorderThickness="1"
		CornerRadius="5">
		<StackPanel
			Spacing="10">
			<TextBlock
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				FontSize="20"
				Grid.Column="0"
				Text="{Binding Text}"
				TextWrapping="Wrap"/>

			<Button
				Width="250"
				IsVisible="{Binding !IsMorphologyVisible}"
				HorizontalAlignment="Left"
				HorizontalContentAlignment="Center"
				Content="Морфологический разбор"
				Command="{Binding ParseMorphologyCommand}"/>
			<Grid
				IsVisible="{Binding IsMorphologyVisible}"
				RowDefinitions="auto,auto">
				<TextBlock
					Grid.Row="0"
					Classes="category"
					Text="Морфологический разбор"
					TextWrapping="Wrap"/>
					<ItemsControl
						Grid.Row="1"
						Margin="0 10 0 0"
						ItemsSource="{Binding Tokens}">
						<ItemsControl.ItemsPanel>
							<ItemsPanelTemplate>
								<WrapPanel/>
							</ItemsPanelTemplate>
						</ItemsControl.ItemsPanel>
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<view:TokenMorphologyView
									Margin="2 0"
									DataContext="{Binding}"/>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
			</Grid>

			<Button
				Width="250"
				IsVisible="{Binding !IsSyntaxVisible}"
				HorizontalAlignment="Left"
				HorizontalContentAlignment="Center"
				Content="Синтаксический разбор"
				Command="{Binding ParseSyntaxCommand}"/>
			<Grid
				IsVisible="{Binding IsSyntaxVisible}"
				RowDefinitions="auto,auto">
				<TextBlock
					Grid.Row="0"
					Classes="category"
					Text="Синтаксический разбор"
					TextWrapping="Wrap"/>
				<ScrollViewer
					Grid.Row="1"
					Margin="0 10 0 0"
					AllowAutoHide="True"
					HorizontalScrollBarVisibility="Auto">
					<Grid
						RowDefinitions="auto, auto">
						<Canvas
							x:Name="ArrowCanvas"
							Grid.Row="0"
							IsHitTestVisible="False"
							Height="{Binding #sentence.SyntaxArrowsHeight, Mode=OneWay}"/>

						<ItemsControl
							x:Name="TokenItems"
							Grid.Row="1"
							VerticalAlignment="Bottom"
							Margin="0 0 0 10"
							ItemsSource="{Binding Tokens}">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<StackPanel Orientation="Horizontal"/>
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<view:TokenSyntaxView
										Margin="2 0"
										DataContext="{Binding}"/>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</Grid>
				</ScrollViewer>
			</Grid>

			<Button
				Width="250"
				IsVisible="{Binding !IsSemanticsVisible}"
				HorizontalAlignment="Left"
				HorizontalContentAlignment="Center"
				Content="Семантический разбор"
				Command="{Binding ParseSemanticsCommand}"/>
			<Grid
				IsVisible="{Binding IsSemanticsVisible}"
				RowDefinitions="auto,auto">
				<TextBlock
					Grid.Row="0"
					Classes="category"
					Text="Семантический разбор"
					TextWrapping="Wrap"/>
				<WrapPanel
					Grid.Row="1"
					Margin="0 10 0 0">
					<ItemsControl
						ItemsSource="{Binding Tokens}">
						<ItemsControl.ItemsPanel>
							<ItemsPanelTemplate>
								<WrapPanel/>
							</ItemsPanelTemplate>
						</ItemsControl.ItemsPanel>
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<view:TokenSemanticsView
									Margin="2 0"
									DataContext="{Binding}"/>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</WrapPanel>
			</Grid>
		</StackPanel>
	</Border>
</ContentControl>
