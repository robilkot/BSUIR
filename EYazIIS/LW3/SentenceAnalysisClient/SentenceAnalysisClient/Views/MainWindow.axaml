<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SentenceAnalysisClient.ViewModels"
        xmlns:views="using:SentenceAnalysisClient.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
		TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
		ExtendClientAreaToDecorationsHint="True"
        x:Class="SentenceAnalysisClient.Views.MainWindow"
        Title="Разбор предложений"
        Width="1000" Height="700">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid>
		<ExperimentalAcrylicBorder
			Grid.ColumnSpan="3"
			IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="Black"
					TintOpacity="1"
					MaterialOpacity="0.5" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="200"
				MinWidth="200"/>
			<ColumnDefinition
				Width="3"/>
			<ColumnDefinition
				Width="*"
				MinWidth="200"/>
		</Grid.ColumnDefinitions>
		<!-- Left sidebar with text list -->
		<Border
			Padding="10"
			MinWidth="200"
			Grid.Column="0">
			<DockPanel>
				<StackPanel
					DockPanel.Dock="Top"
					Spacing="10"
					Margin="0 0 0 10">
					<TextBox
						Watermark="Введите текст"
                        Text="{Binding NewText}"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
						MinHeight="60"/>
					<Button
						Content="Добавить текст"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Center"
						Command="{Binding AddTextCommand}"/>
				</StackPanel>


				<TextBlock
					DockPanel.Dock="Top"
					IsVisible="{Binding !Texts.Count}"
					Margin="0 40 0 0"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					TextWrapping="Wrap"
					Text="Добавьте текст сверху"/>

				<ListBox
					Background="Transparent"
					IsVisible="{Binding !!Texts.Count}"
					ItemsSource="{Binding Texts}"
					SelectedItem="{Binding SelectedText}"
					ScrollViewer.VerticalScrollBarVisibility="Auto">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Grid
								Classes="fading">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>

								<!-- Text content -->
								<TextBlock
									Grid.Column="0"
									HorizontalAlignment="Left"
									Text="{Binding Text}"
									TextTrimming="CharacterEllipsis"/>

								<Button
									Grid.Column="1"
									Content="×"
									FontWeight="Bold"
									Padding="4 0"
									Margin="4 0 0 0"
									Command="{Binding Path=DataContext.DeleteTextCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
									CommandParameter="{Binding}"
									HorizontalAlignment="Right">
								</Button>
							</Grid>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</DockPanel>
		</Border>
		
		<GridSplitter
			Grid.Column="1"
			ResizeDirection="Columns"/>

		<!-- Main content area -->
		<Grid
			Grid.Column="2"
			RowDefinitions="32, *">
			<TextBlock
				Grid.Row="0"
				Margin="20 0"
				IsHitTestVisible="False"
				VerticalAlignment="Center"
				Text="Анализ предложений"/>
			
			<Border
				Margin="0 10 0 0"
				IsVisible="{Binding SelectedText, Converter={x:Static ObjectConverters.IsNotNull}}"
				MinWidth="200"
				Grid.Row="1"
				Padding="10">
				<views:TextView
					DataContext="{Binding SelectedText}"/>
			</Border>
			
			<TextBlock
				IsVisible="{Binding SelectedText, Converter={x:Static ObjectConverters.IsNull}}"
				Grid.Row="1"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Text="Выберите текст для анализа из списка слева"/>
		</Grid>
	</Grid>
</Window>